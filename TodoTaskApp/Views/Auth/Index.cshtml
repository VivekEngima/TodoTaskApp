@model TodoTaskApp.Models.AuthViewModel
@{
    ViewData["Title"] = "Welcome to TodoTaskApp";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="auth-page">
    <div class="auth-container">
        <div class="auth-header">
            <h1><i class="fas fa-tasks me-3"></i>Manage Todo Task</h1>
        </div>
        
        <div class="auth-content">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-custom">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-custom">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @TempData["ErrorMessage"]
                </div>
            }
            
            @if (TempData["InfoMessage"] != null)
            {
                <div class="alert alert-info alert-custom" id="infoMessage">
                    <i class="fas fa-info-circle me-2"></i>
                    @TempData["InfoMessage"]
                </div>
            }

            <div class="row">
                <!-- Login Section -->
                <div class="col-md-6">
                    <div class="auth-section">
                        <div class="section-header">
                            <i class="fas fa-sign-in-alt"></i>
                            <h3>Sign In</h3>
                        </div>
                        
                        <form asp-action="Login" method="post" id="loginForm">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            
                            <div class="mb-3">
                                <label asp-for="Login.Username" class="form-label"></label>
                                <input name="Username" class="form-control" placeholder="Enter your username" value="ram" />
                                <span asp-validation-for="Login.Username" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="Login.Password" class="form-label"></label>
                                <input name="Password" type="password" class="form-control" placeholder="Enter your password" value="SecurePass2024!" />
                                <span asp-validation-for="Login.Password" class="text-danger"></span>
                            </div>
                            
                            <button type="submit" class="btn btn-login btn-auth w-100">
                                <i class="fas fa-sign-in-alt me-2"></i>Sign In
                            </button>
                        </form>
                    </div>
                </div>
                
                <!-- Visual Separator -->
                <div class="col-12 d-md-none">
                    <div class="divider">
                        <span>OR</span>
                    </div>
                </div>
                
                <!-- Signup Section -->
                <div class="col-md-6">
                    <div class="auth-section" id="signupSection">
                        <div class="section-header">
                            <i class="fas fa-user-plus"></i>
                            <h3>Create Account</h3>
                        </div>
                        
                        <form asp-action="Signup" method="post" id="signupForm">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            
                            <div class="mb-3">
                                <label asp-for="Signup.Username" class="form-label"></label>
                                <input name="Username" class="form-control" placeholder="Choose a username" value="ram" />
                                <span asp-validation-for="Signup.Username" class="text-danger"></span>
                                <div id="usernameStatus" class="mt-1"></div>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="Signup.Password" class="form-label"></label>
                                <input name="Password" type="password" class="form-control" placeholder="Create a password" value="SecurePass2024!" />
                                <span asp-validation-for="Signup.Password" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="Signup.ConfirmPassword" class="form-label"></label>
                                <input name="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" value="SecurePass2024!" />
                                <span asp-validation-for="Signup.ConfirmPassword" class="text-danger"></span>
                            </div>
                            
                            <button type="submit" class="btn btn-signup btn-auth w-100">
                                <i class="fas fa-user-plus me-2"></i>Create Account
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            
            // Username availability check
            $('input[name="Username"]').on('blur', function() {
                var username = $(this).val();
                if (username.length > 0) {
                    $.post('/Auth/CheckUsername', { username: username })
                        .done(function(data) {
                            var statusDiv = $('#usernameStatus');
                            if (data.available) {
                                statusDiv.html('<small class="text-success"><i class="fas fa-check-circle me-1"></i>' + data.message + '</small>');
                            } else {
                                statusDiv.html('<small class="text-danger"><i class="fas fa-times-circle me-1"></i>' + data.message + '</small>');
                            }
                        })
                        .fail(function() {
                            $('#usernameStatus').html('<small class="text-warning"><i class="fas fa-exclamation-triangle me-1"></i>Unable to check username</small>');
                        });
                } else {
                    $('#usernameStatus').empty();
                }
            });
            
            // Clear status when typing
            $('input[name="Username"]').on('input', function() {
                if ($(this).val().length === 0) {
                    $('#usernameStatus').empty();
                }
            });
        });
    </script>
</body>
</html>
