@model IEnumerable<TodoTaskViewModel>
@{
    ViewData["Title"] = "Todo Tasks ✍";
}

@Html.AntiForgeryToken()

<div class="row">
    <!-- Left Sidebar - Filters -->
    <div class="col-md-2">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-filter me-2"></i>Filters</h6>
            </div>
            <div class="card-body">
                <form id="filterForm">
                    <div class="mb-3">
                        <label class="form-label">Search</label>
                        <input type="text" class="form-control form-control-sm" id="searchInput" placeholder="Search tasks...">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Task</label>
                        <div class="d-grid gap-2">
                            <button type="button" class="btn btn-outline-secondary btn-sm filter-btn" data-filter="upcoming">
                                Upcoming
                            </button>
                            <button type="button" class="btn btn-outline-secondary btn-sm filter-btn" data-filter="today">
                                <i class="fas fa-calendar-day me-1"></i>Today
                            </button>
                            <button type="button" class="btn btn-outline-secondary btn-sm filter-btn" data-filter="calendar">
                                <i class="fas fa-calendar me-1"></i>Calendar
                            </button>
                        </div>
                    </div>

                    <!-- Inline Date Range Picker (Hidden by default) -->
                    <div id="dateRangePicker" class="d-none">
                        <div class="mb-3">
                            <label class="form-label">Date Range</label>
                            <div class="d-grid gap-1">
                                <div class="row g-1">
                                    <div class="col-6">
                                        <input type="date" class="form-control form-control-sm" id="startDate" placeholder="Start Date">
                                    </div>
                                    <div class="col-6">
                                        <input type="date" class="form-control form-control-sm" id="endDate" placeholder="End Date">
                                    </div>
                                </div>
                                <div class="btn-group btn-group-sm">
                                    <button type="button" class="btn btn-primary btn-sm" id="applyDateRange">
                                        <i class="fas fa-check me-1"></i>Apply
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary btn-sm" id="clearDateRange">
                                        <i class="fas fa-times me-1"></i>Clear
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Priority</label>
                        <div class="d-grid gap-1">
                            <button type="button" class="btn btn-outline-secondary btn-sm priority-btn" data-priority="Normal">
                                Normal
                            </button>
                            <button type="button" class="btn btn-outline-warning btn-sm priority-btn" data-priority="High">
                                High
                            </button>
                            <button type="button" class="btn btn-outline-info btn-sm priority-btn" data-priority="Low">
                                Low
                            </button>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <div class="d-grid gap-1">
                            <button type="button" class="btn btn-outline-primary btn-sm status-btn" data-status="Pending">
                                Pending
                            </button>
                            <button type="button" class="btn btn-outline-warning btn-sm status-btn" data-status="Hold">
                                Hold
                            </button>
                            <button type="button" class="btn btn-outline-success btn-sm status-btn" data-status="Completed">
                                Completed
                            </button>
                        </div>
                    </div>
                </form>

                <div class="settings-section mt-4">
                    <button type="button" class="btn btn-outline-dark btn-sm w-100">
                        <i class="fas fa-cog me-1"></i>Settings
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="col-md-10">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <h5 class="mb-0 me-3">Tasks</h5>
                    <button type="button" class="btn btn-success btn-sm me-2" id="addTaskBtn">
                        <i class="fas fa-plus me-1"></i>Add Task
                    </button>
                    <!-- Import/Export Buttons -->
                    <div class="btn-group me-2" role="group">
                        <button type="button" class="btn btn-outline-info btn-sm" id="exportBtn" title="Export Tasks">
                            <i class="fas fa-download me-1"></i>Export
                        </button>
                        <button type="button" class="btn btn-outline-warning btn-sm" id="importBtn" title="Import Tasks">
                            <i class="fas fa-upload me-1"></i>Import
                        </button>
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <span class="badge bg-secondary me-2" id="taskCount">@Model.Count() tasks</span>
                    <button type="button" class="btn btn-outline-primary btn-sm me-2" id="dashboardBtn" title="Go to Dashboard">
                        Dashboard
                    </button>
                    <button type="button" class="btn btn-outline-secondary btn-sm" id="refreshBtn" title="Refresh">
                        <i class="fas fa-sync-alt"></i>
                    </button>
                </div>
            </div>

            <!-- Hidden file input for import -->
            <input type="file" id="importFileInput" accept=".csv,.xlsx" style="display: none;" />

            <div class="card-body p-0">
                <div class="table-container" style="max-height: 600px; overflow-y: auto;">
                    <table class="table table-hover mb-0" id="tasksTable">
                        <thead class="table-light sticky-top">
                            <tr>
                                <th style="width: 5%"></th>
                                <th style="width: 40%">Tasks</th>
                                <th style="width: 15%">Priority</th>
                                <th style="width: 10%">Status</th>
                                <th style="width: 15%">Due On</th>
                                <th style="width: 10%">Documents</th>
                                <th style="width: 10%">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="tasksBody">
                            <!-- Tasks will be loaded via AJAX -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Task Modal -->
@await Html.PartialAsync("_TaskModal")
<!-- Document Modal -->
@await Html.PartialAsync("_DocumentModal")
<!-- Comments Modal -->
@await Html.PartialAsync("_CommentsModal")



<!-- Loading Spinner -->
<div class="d-none" id="loadingSpinner">
    <div class="position-fixed top-50 start-50 translate-middle">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>
